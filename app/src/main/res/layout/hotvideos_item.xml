<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/videos_simple"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        fresco:failureImage="@drawable/icon_failure"
        fresco:failureImageScaleType="centerCrop"
        fresco:viewAspectRatio="1.3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/videos_simple"
        android:layout_alignRight="@+id/videos_simple"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/raw_1501143896" />

        <TextView
            android:id="@+id/message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="12"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>