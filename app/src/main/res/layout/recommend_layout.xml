<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/recommend_tab"
        style="MyTabLayoutTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/colorPrimary"></android.support.design.widget.TabLayout>

    <com.bwie.quarterhour.custom.NoScrollViewPage
        android:id="@+id/recommend_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.bwie.quarterhour.custom.NoScrollViewPage>
</LinearLayout>